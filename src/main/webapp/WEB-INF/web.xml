<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                    http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

        <filter>
            <filter-name>Authentication</filter-name>
            <filter-class>online.javaclass.bookstore.web.filter.AuthenticationFilter</filter-class>
        </filter>
        <filter>
            <filter-name>Authorisation</filter-name>
            <filter-class>online.javaclass.bookstore.web.filter.AuthorisationFilter</filter-class>
        </filter>

        <filter-mapping>
            <filter-name>Authentication</filter-name>
            <url-pattern>/controller</url-pattern>
        </filter-mapping>
        <filter-mapping>
            <filter-name>Authorisation</filter-name>
            <url-pattern>/controller</url-pattern>
        </filter-mapping>

    <error-page>
        <location>/error</location>
    </error-page>
</web-app>